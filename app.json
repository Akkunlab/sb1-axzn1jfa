{
  "expo": {
    "name": "bolt-expo-nativewind",
    "slug": "bolt-expo-nativewind",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMotionUsageDescription": "このアプリは端末の傾きを検知してキーボードを操作するために加速度センサーを使用します。",
        "NSAccelerometerUsageDescription": "このアプリは端末の傾きを検知してキーボードを操作するために加速度センサーを使用します。"
      }
    },
    "android": {
      "permissions": [
        "android.permission.VIBRATE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": ["expo-router", "expo-font", "expo-web-browser", "expo-sensors"],
    "experiments": {
      "typedRoutes": true
    }
  }
}
